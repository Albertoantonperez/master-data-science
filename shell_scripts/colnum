#!/bin/zsh

show_help() {
echo "

  Usage: colnum [-e] [-s sep] filename

  -e            Example provided [default no]
  -s            Field delimiter
  -h            Show this help
  filename      File to list columns. Required

  Examples:     colnum something.txt
                colnum -e something.txt
                colnum -s '|' something.txt
                colnum -es '#' something

"
}


sep="^"
ex=0

# The first : is to avoid printing errors at reading parameters
while getopts ":es:h" opt; do
  case $opt in
    e)
      ex=1;;
    s)
      sep=$OPTARG;;
    h)
      show_help
      exit 0;;
    \?)
      echo "Invalid option: -$OPTARG. Use -h flag for help." >&2
      show_help
      exit 2;;
  esac
done

#This tells getopts to move on to the next argument.
shift $(($OPTIND-1))

if [ -z "$1" ]; then
  echo "Error, you must specify a filename"
  show_help
  exit 1
fi

awk -F"$sep" -v awk_ex=$ex '
  BEGIN{
    split("", body)
  }
  (FNR==1) {
    split($0, header)
  }
  (FNR==2 && awk_ex) {
    split($0, body)
  }
  END {
    for (i in header) {
      resto = (length(body) > 0) ? " -> " body[i] : ""
      print i ". " header[i] resto
    }
 }' "$1"
